<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/item_name_tv"

            android:layout_width="175dp"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:maxLines="1"
            android:ellipsize="end"

            android:gravity="center"

            android:textSize="32dp"
            android:text="商品名称"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_product_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"

            android:layout_toRightOf="@+id/item_name_tv"

            android:maxLines="2"
            android:ellipsize="end"

            android:text="商品描述区域"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/item_product_price_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"

            android:autoSizeTextType="uniform"

            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="321.123"
            android:textColor="@color/warm_amber"
            android:textSize="40dp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"

            android:layout_marginRight="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="数量:"
                android:textSize="24dp"
                android:textColor="@color/black"

                android:layout_gravity="center"
                android:gravity="center"
                ></TextView>

            <EditText
                android:id="@+id/item_quantity_et"

                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:text="1"
                android:textAlignment="center"
                android:textSize="20dp"

                android:inputType="number"

                android:layout_gravity="center"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                android:autoSizeTextType="uniform"

                style="@style/NoUnderlineEditText"

                android:background="@drawable/item_edittext_border"
                ></EditText>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/item_add_ib"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/zengjia"

                    android:layout_marginBottom="5dp"
                    ></ImageButton>
                <ImageButton
                    android:id="@+id/item_sub_ib"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/jianshao"

                    android:layout_marginTop="5dp"
                    ></ImageButton>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
